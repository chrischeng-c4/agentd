{
  "approvals": {
    "autoApprove": {
      "replace": true,
      "write_file": true
    }
  },
  "mcp": {
    "allowed": ["agentd", "playwright"]
  },
  "mcpServers": {
    "agentd": {
      "command": "/Users/chris.cheng/.local/bin/agentd",
      "args": ["mcp-server"],
      "cwd": "/Users/chris.cheng/chris-project/agentd",
      "timeout": 30000,
      "trust": true
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    }
  },
  "tools": {
    "allowed": [
      "list_directory",
      "read_file",
      "search_file_content",
      "glob",
      "write_file",
      "replace"
    ]
  }
}